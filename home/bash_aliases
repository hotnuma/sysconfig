alias cgrep='grep -nr --include=*.{h,c,cpp,cxx}'
alias imgconv='ffmpeg -hide_banner -loglevel error'
alias free='LANG=C free'
alias hgrep='grep -nr --include=*.{h,hc,hpp,hxx}'
alias jc='journalctl'
alias jcn='journalctl --no-pager'
alias ls='ls -la --color=auto'
alias pkg-find='pkg-config --list-all | grep'
alias pyinst='python3 -m pip install --break-system-packages --user'
alias syslog='journalctl -b -f --lines=300'
alias sysprc='sudo sysquery -prc'
