<?xml version="1.0" encoding="UTF-8"?>
<labwc_config xmlns="http://openbox.org/3.4/rc">
  <core>
    <xwaylandPersistence>yes</xwaylandPersistence>
  </core>
  <placement>
    <policy>automatic</policy>
  </placement>
  <libinput>
    <device>
      <naturalScroll>no</naturalScroll>
    </device>
  </libinput>
  <theme>
    <name>AdwaitaRevisitedLight</name>
    <cornerRadius>6</cornerRadius>
    <keepBorder>yes</keepBorder>
    <font place="ActiveWindow">
      <name>DejaVu Sans</name>
      <size>12</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="InactiveWindow">
      <name>DejaVu Sans</name>
      <size>12</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <font place="OnScreenDisplay">
      <name>DejaVu Sans</name>
      <size>12</size>
      <weight>Normal</weight>
      <slant>Normal</slant>
    </font>
    <dropShadows>yes</dropShadows>
  </theme>
  <keyboard>
    <numlock>on</numlock>
    <default/>
    <keybind key="W-S-r">
      <action name="Execute" command="systemctl reboot"/>
    </keybind>
    <keybind key="W-S-q">
      <action name="Execute" command="systemctl poweroff"/>
    </keybind>
    <keybind key="W-a">
      <action name="Execute" command="pavucontrol"/>
    </keybind>
    <keybind key="W-b">
      <action name="Execute" command="firefox"/>
    </keybind>
    <keybind key="W-e">
      <action name="Execute" command="fileman /home/hotnuma/Downloads/"/>
    </keybind>
    <keybind key="W-s">
      <action name="Execute" command="xfce4-taskmanager"/>
    </keybind>
    <keybind key="W-space">
      <action name="Execute" command="/usr/local/bin/rofi -show run"/>
    </keybind>
    <keybind key="W-t">
      <action name="Execute" command="xfce4-terminal --default-working-directory=/home/hotnuma/Downloads/"/>
    </keybind>
    <keybind key="W-KP_4">
      <action name="SnapToEdge" direction="left"/>
    </keybind>
    <keybind key="W-KP_6">
      <action name="SnapToEdge" direction="right"/>
    </keybind>
    <keybind key="Print">
      <action name="Execute">
        <command>xfce4-screenshooter</command>
      </action>
    </keybind>
  </keyboard>
  <mouse>
    <default/>
    <context name="Title">
      <mousebind button="Right" action="Click">
      </mousebind>
    </context>
    <context name="WindowMenu">
      <mousebind button="Left" action="Click">
      </mousebind>
      <mousebind button="Right" action="Click">
      </mousebind>
    </context>
    <context name="All">
      <mousebind direction="W-Up" action="Scroll">
        <action name="ZoomIn"/>
      </mousebind>
      <mousebind direction="W-Down" action="Scroll">
        <action name="ZoomOut"/>
      </mousebind>
    </context>
  </mouse>
  <windowRules>
    <windowRule identifier="Kodi" serverDecoration="yes"/>
  </windowRules>
  <snapping>
    <range>0</range>
    <topMaximize>yes</topMaximize>
  </snapping>
  <magnifier>
    <width>-1</width>
    <height>-1</height>
    <initScale>2.0</initScale>
    <increment>0.2</increment>
    <useFilter>false</useFilter>
  </magnifier>
  <windowSwitcher show="yes" preview="yes" outlines="yes" allWorkspaces="no">
    <fields>
      <field content="title" width="100%"/>
    </fields>
  </windowSwitcher>
</labwc_config>
